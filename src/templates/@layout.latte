{**
 * @param string   $basePath web base path
 * @param array    $flashes  flash messages
 *}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">

    <title>{ifset title}{include title|stripHtml} | {/ifset}Cesťák</title>

    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css">

    <!-- jQuery library -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>

    <!-- Popper JS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js"></script>

    <!-- Latest compiled JavaScript -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js"></script>

    <link rel="stylesheet" href="{$basePath}/css/material.min.css">
    <link rel="stylesheet" href="{$basePath}/css/style.css">
    {block head}{/block}
</head>

<body>
<div n:foreach="$flashes as $flash" n:class="flash, $flash->type">{$flash->message}</div>

<div class="container">
    <div class="jumbotron">
        <img src="{$basePath}/images/app/logo.svg" class="lo-logo">
        <span class="app-name">Cesťák</span>
    </div>
    {include content}
</div>

{block script}
    <script src="{$basePath}/js/main.js"></script>
{/block}

<footer class="footer">
    <div class="container text-center">
        All rights reversed 2018, <a href="https://github.com/travidence/travidence-nette">Open-source</a> made with <span class="text-love">♥</span> <a href="https://github.com/nette/nette">Nette</a>.
    </div>
</footer>
</body>
</html>
